---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import HeroBanner from '../components/HeroBanner.astro';
import Activities from '../components/Activities.astro';
import Projects from '../components/Projects.astro';
import Experience from '../components/Experience.astro';
import NonProfit from '../components/NonProfit.astro';
import StructuredData from '../components/StructuredData.astro';
---

<BaseLayout 
  title="Home"
  description="Todd Warren - Technology leader, educator, and startup advisor specializing in consulting, teaching, and assisting impact-driven organizations"
>
  <StructuredData type="Person" data={{
    name: "Todd Warren",
    jobTitle: "Technology Leader & Educator",
    description: "Technology leader, educator, and startup advisor",
  }} />
  
  <Header client:load />
  
  <main>
    <HeroBanner />
    <Activities />
    <hr class="border-gray-200" />
    <Projects />
    <hr class="border-gray-200" />
    <Experience />
    <hr class="border-gray-200" />
    <NonProfit />
  </main>

  <Footer client:load />
</BaseLayout>

