---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header';
import Footer from '../../components/Footer';
import Container from '../../components/ui/Container';
import TitleSection from '../../components/ui/TitleSection';

const title = 'About';
const description = 'About Todd Warren - software leader, educator, advisor';
---

<BaseLayout title={title} description={description}>
  <Header client:load />
  <main class="py-16">
    <Container>
      <TitleSection 
        client:load 
        title="About" 
        subtitle="Software leader, educator, advisor"
        center 
      />
      <div class="mt-12 prose prose-lg max-w-prose mx-auto">
        <p>Bio and current roles will be added here as part of Story 6.</p>
        <!-- Placeholder sections:
          - Current focus/work
          - Boards and advisory roles
          - Location (Seattle/Park City)
          - CV link
        -->
      </div>
    </Container>
  </main>
  <Footer client:load />
</BaseLayout>
