---
import { getCollection } from 'astro:content';
import Container from './ui/Container';
import TitleSection from './ui/TitleSection';

const heroEntries = await getCollection('hero');
const hero = heroEntries[0];

if (!hero) {
  throw new Error('Hero content not found');
}

const { title, subtitle, content, linkTo, linkText } = hero.data;
---

<section class="bg-gradient-to-br from-indigo-50 to-white py-16 md:py-24 border-b border-indigo-100">
  <Container section client:load>
    <div class="max-w-3xl">
      <TitleSection title={title} subtitle={subtitle} client:load />
      <p class="text-lg text-gray-700 mb-8">
        {content}
      </p>
      <a 
        href={linkTo} 
        class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-indigo-700 transition-colors"
      >
        {linkText}
      </a>
    </div>
  </Container>
</section>
