---
interface Props {
  title: string;
  subtitle: string;
  startDate: string;
  endDate: string;
}

const { title, subtitle, startDate, endDate } = Astro.props;
---

<div class="flex flex-col sm:flex-row w-full p-4 relative border-l border-indigo-200 last:pb-0">
  <span class="w-3 h-3 border border-indigo-200 bg-indigo-100 rounded-full absolute -left-[6px] top-5"></span>
  
  <div class="w-full sm:w-1/3">
    <div class="text-xs border border-teal-400 rounded-full px-2 w-fit mb-3">
      {startDate} - {endDate}
    </div>
    <div class="font-semibold text-indigo-900">
      {title}
    </div>
    <div class="text-xs text-gray-600 mt-1">
      {subtitle}
    </div>
  </div>
  
  <div class="w-full sm:w-2/3 mt-4 sm:mt-0 prose prose-sm max-w-none text-gray-700">
    <slot />
  </div>
</div>
