---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Container from './ui/Container';
import TitleSection from './ui/TitleSection';

const projects = await getCollection('projects');
---

<section class="bg-gray-50 py-12 md:py-16">
  <Container section client:load>
    <TitleSection 
      title="Featured Projects" 
      subtitle="Some of the work I'm involved with"
      center={true}
      client:load
    />
    <div class="grid md:grid-cols-2 gap-8 mt-8">
      {projects.map(async (project) => {
        const { Content } = await project.render();
        return (
          <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            {project.data.cover && (
              <div class="aspect-video bg-gray-100 flex items-center justify-center p-8">
                <img 
                  src={project.data.cover}
                  alt={project.data.title}
                  class="max-h-full max-w-full object-contain"
                />
              </div>
            )}
            <div class="p-6">
              <h3 class="text-xl font-bold text-indigo-900 mb-3">{project.data.title}</h3>
              <div class="text-gray-700 prose prose-sm">
                <Content />
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </Container>
</section>
